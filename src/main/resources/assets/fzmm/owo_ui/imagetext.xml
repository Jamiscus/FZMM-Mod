<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20.2/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <label id="title">
                    <positioning type="absolute">20,20</positioning>
                    <text translate="true">fzmm.gui.title.imagetext</text>
                </label>

                <scroll direction="vertical">

                    <flow-layout direction="vertical" id="options-list">
                        <children>
                            <fzmm.image-rows>
                                <buttonId>image</buttonId>
                                <enumId>imageSourceType</enumId>
                            </fzmm.image-rows>
                            <fzmm.slider-row>
                                <id>width</id>
                                <tooltipId>resolution</tooltipId>
                            </fzmm.slider-row>
                            <fzmm.slider-row>
                                <id>height</id>
                                <tooltipId>resolution</tooltipId>
                            </fzmm.slider-row>
                            <fzmm.boolean-row>
                                <id>preserveImageAspectRatio</id>
                            </fzmm.boolean-row>
                            <fzmm.boolean-row>
                                <id>showResolution</id>
                            </fzmm.boolean-row>
                            <fzmm.boolean-row>
                                <id>smoothImage</id>
                            </fzmm.boolean-row>
                            <fzmm.slider-row>
                                <id>percentageOfSimilarityToCompress</id>
                            </fzmm.slider-row>

                            <fzmm.screen-tab-row>
                                <id>algorithms</id>
                            </fzmm.screen-tab-row>

                            <fzmm.screen-tab>
                                <id>algorithm.characters</id>
                                <children>
                                    <fzmm.text-box-row>
                                        <id>characters</id>
                                        <symbolChatButtons>true</symbolChatButtons>
                                    </fzmm.text-box-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>algorithm.braille</id>
                                <children>
                                    <fzmm.slider-row>
                                        <id>edgeThreshold</id>
                                    </fzmm.slider-row>
                                    <fzmm.slider-row>
                                        <id>edgeDistance</id>
                                    </fzmm.slider-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab-row>
                                <id>tabs</id>
                            </fzmm.screen-tab-row>

                            <fzmm.screen-tab>
                                <id>lore</id>
                                <children>
                                    <fzmm.enum-row>
                                        <id>loreMode</id>
                                    </fzmm.enum-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>bookPage</id>
                                <children>
                                    <fzmm.enum-row>
                                        <id>bookPageMode</id>
                                    </fzmm.enum-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>bookTooltip</id>
                                <children>
                                    <fzmm.enum-row>
                                        <id>bookTooltipMode</id>
                                    </fzmm.enum-row>
                                    <fzmm.text-box-row>
                                        <id>bookTooltipAuthor</id>
                                    </fzmm.text-box-row>
                                    <fzmm.text-box-row>
                                        <id>bookTooltipMessage</id>
                                    </fzmm.text-box-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>hologram</id>
                                <children>
                                    <fzmm.number-row>
                                        <id>hologramPosX</id>
                                        <tooltipId>hologramPos</tooltipId>
                                    </fzmm.number-row>
                                    <fzmm.number-row>
                                        <id>hologramPosY</id>
                                        <tooltipId>hologramPos</tooltipId>
                                    </fzmm.number-row>
                                    <fzmm.number-row>
                                        <id>hologramPosZ</id>
                                        <tooltipId>hologramPos</tooltipId>
                                    </fzmm.number-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>sign</id>
                                <children>
                                    <fzmm.enum-row>
                                        <id>signType</id>
                                    </fzmm.enum-row>
                                    <fzmm.boolean-row>
                                        <id>isHangingSign</id>
                                    </fzmm.boolean-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>textDisplay</id>
                                <children>
                                    <fzmm.slider-row>
                                        <id>textDisplayTextOpacity</id>
                                    </fzmm.slider-row>
                                    <fzmm.color-row>
                                        <id>textDisplayBackgroundColor</id>
                                    </fzmm.color-row>
                                    <fzmm.boolean-row>
                                        <id>textDisplayTextShadow</id>
                                    </fzmm.boolean-row>
                                    <fzmm.boolean-row>
                                        <id>textDisplayTextSeeThrough</id>
                                    </fzmm.boolean-row>
                                    <fzmm.enum-row>
                                        <id>textDisplayTextAlignment</id>
                                    </fzmm.enum-row>
                                    <fzmm.enum-row>
                                        <id>textDisplayBillboard</id>
                                    </fzmm.enum-row>
                                    <fzmm.slider-row>
                                        <id>textDisplayRotation</id>
                                    </fzmm.slider-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>copy</id>
                                <children>
                                </children>
                            </fzmm.screen-tab>
                        </children>
                    </flow-layout>

                    <sizing>
                        <vertical method="fill">90</vertical>
                    </sizing>

                    <margins>
                        <vertical>30</vertical>
                    </margins>

                    <scrollbar>
                        <flat>#FFFFFF</flat>
                    </scrollbar>
                </scroll>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="execute-button">
                            <text translate="true">fzmm.gui.button.execute</text>
                        </button>

                        <button id="preview-button">
                            <text translate="true">fzmm.gui.button.preview</text>
                        </button>

                    </children>

                    <positioning type="relative">0,100</positioning>

                    <horizontal-alignment>right</horizontal-alignment>
                    <vertical-alignment>top</vertical-alignment>
                    <gap>4</gap>

                    <margins>
                        <left>20</left>
                        <bottom>20</bottom>
                    </margins>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="back-button">
                            <text translate="true">fzmm.gui.button.back</text>

                            <margins>
                                <right>20</right>
                                <bottom>20</bottom>
                            </margins>
                        </button>

                    </children>

                    <positioning type="relative">100,100</positioning>

                    <vertical-alignment>bottom</vertical-alignment>
                    <horizontal-alignment>right</horizontal-alignment>
                </flow-layout>
            </children>


            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
</owo-ui>