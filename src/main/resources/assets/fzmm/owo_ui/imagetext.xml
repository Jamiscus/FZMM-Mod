<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.21/owo-ui.xsd">
    <components>
        <fzmm.styled-flow-layout direction="vertical">
            <children>
                <fzmm.styled-label id="title">
                    <positioning type="absolute">3,3</positioning>
                    <text translate="true">fzmm.gui.title.imagetext</text>
                </fzmm.styled-label>

                <fzmm.styled-scroll direction="vertical">

                    <fzmm.styled-flow-layout direction="vertical" id="options-list">
                        <children>
                            <fzmm.image-rows>
                                <buttonId>image</buttonId>
                                <imageModeId>imageSourceType</imageModeId>
                            </fzmm.image-rows>
                            <fzmm.slider-row>
                                <id>width</id>
                                <tooltipId>resolution</tooltipId>
                            </fzmm.slider-row>
                            <fzmm.slider-row>
                                <id>height</id>
                                <tooltipId>resolution</tooltipId>
                            </fzmm.slider-row>
                            <fzmm.boolean-row>
                                <id>preserveImageAspectRatio</id>
                            </fzmm.boolean-row>
                            <fzmm.boolean-row>
                                <id>showResolution</id>
                            </fzmm.boolean-row>
                            <fzmm.boolean-row>
                                <id>smoothImage</id>
                            </fzmm.boolean-row>
                            <fzmm.slider-row>
                                <id>percentageOfSimilarityToCompress</id>
                            </fzmm.slider-row>

                            <fzmm.screen-tab-row>
                                <id>algorithms</id>
                            </fzmm.screen-tab-row>

                            <fzmm.screen-tab>
                                <id>algorithm.characters</id>
                                <children>
                                    <fzmm.text-box-row>
                                        <id>characters</id>
                                        <symbolChatButtons>true</symbolChatButtons>
                                    </fzmm.text-box-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>algorithm.braille</id>
                                <children>
                                    <fzmm.slider-row>
                                        <id>edgeThreshold</id>
                                    </fzmm.slider-row>
                                    <fzmm.slider-row>
                                        <id>edgeDistance</id>
                                    </fzmm.slider-row>
                                    <fzmm.boolean-row>
                                        <id>invert</id>
                                    </fzmm.boolean-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab-row>
                                <id>tabs</id>
                            </fzmm.screen-tab-row>

                            <fzmm.screen-tab>
                                <id>lore</id>
                                <children>
                                    <fzmm.enum-row>
                                        <id>loreMode</id>
                                    </fzmm.enum-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>bookPage</id>
                                <children>
                                    <fzmm.enum-row>
                                        <id>bookPageMode</id>
                                    </fzmm.enum-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>bookTooltip</id>
                                <children>
                                    <fzmm.enum-row>
                                        <id>bookTooltipMode</id>
                                    </fzmm.enum-row>
                                    <fzmm.text-box-row>
                                        <id>bookTooltipAuthor</id>
                                    </fzmm.text-box-row>
                                    <fzmm.text-box-row>
                                        <id>bookTooltipMessage</id>
                                    </fzmm.text-box-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>hologram</id>
                                <children>
                                    <fzmm.number-row>
                                        <id>hologramPosX</id>
                                        <tooltipId>hologramPos</tooltipId>
                                    </fzmm.number-row>
                                    <fzmm.number-row>
                                        <id>hologramPosY</id>
                                        <tooltipId>hologramPos</tooltipId>
                                    </fzmm.number-row>
                                    <fzmm.number-row>
                                        <id>hologramPosZ</id>
                                        <tooltipId>hologramPos</tooltipId>
                                    </fzmm.number-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>sign</id>
                                <children>
                                    <fzmm.enum-row>
                                        <id>signType</id>
                                    </fzmm.enum-row>
                                    <fzmm.boolean-row>
                                        <id>isHangingSign</id>
                                    </fzmm.boolean-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>textDisplay</id>
                                <children>
                                    <fzmm.slider-row>
                                        <id>textDisplayTextOpacity</id>
                                    </fzmm.slider-row>
                                    <fzmm.color-row>
                                        <id>textDisplayBackgroundColor</id>
                                    </fzmm.color-row>
                                    <fzmm.boolean-row>
                                        <id>textDisplayTextShadow</id>
                                    </fzmm.boolean-row>
                                    <fzmm.boolean-row>
                                        <id>textDisplayTextSeeThrough</id>
                                    </fzmm.boolean-row>
                                    <fzmm.enum-row>
                                        <id>textDisplayTextAlignment</id>
                                    </fzmm.enum-row>
                                    <fzmm.enum-row>
                                        <id>textDisplayBillboard</id>
                                    </fzmm.enum-row>
                                    <fzmm.slider-row>
                                        <id>textDisplayRotation</id>
                                    </fzmm.slider-row>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>copy</id>
                                <children>
                                </children>
                            </fzmm.screen-tab>
                        </children>
                    </fzmm.styled-flow-layout>

                    <sizing>
                        <vertical method="fill">90</vertical>
                    </sizing>

                    <margins>
                        <vertical>10</vertical>
                    </margins>
                </fzmm.styled-scroll>

                <fzmm.styled-flow-layout direction="horizontal">
                    <children>

                        <button id="execute-button">
                            <text translate="true">fzmm.gui.button.execute</text>

                            <sizing>
                                <vertical method="fixed">16</vertical>
                            </sizing>
                        </button>

                        <button id="preview-button">
                            <text translate="true">fzmm.gui.button.preview</text>

                            <sizing>
                                <vertical method="fixed">16</vertical>
                            </sizing>
                        </button>

                        <spacer>
                            <sizing>
                                <horizontal method="expand">100</horizontal>
                                <vertical method="fixed">1</vertical>
                            </sizing>
                        </spacer>

                        <button id="back-button">
                            <text translate="true">fzmm.gui.button.back.icon</text>
                            <tooltip-text translate="true">fzmm.gui.button.back</tooltip-text>

                            <sizing>
                                <vertical method="fixed">16</vertical>
                            </sizing>
                        </button>
                    </children>

                    <positioning type="relative">0,100</positioning>

                    <gap>4</gap>

                    <padding>
                        <horizontal>3</horizontal>
                        <bottom>3</bottom>
                    </padding>
                </fzmm.styled-flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </fzmm.styled-flow-layout>
    </components>
</owo-ui>