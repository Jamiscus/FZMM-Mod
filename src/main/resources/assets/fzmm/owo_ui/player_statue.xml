<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.21/owo-ui.xsd">
    <components>
        <fzmm.styled-flow-layout direction="vertical">
            <children>
                <fzmm.styled-label id="title">
                    <positioning type="absolute">3,3</positioning>
                    <text translate="true">fzmm.gui.title.playerStatue</text>
                </fzmm.styled-label>

                <fzmm.styled-scroll direction="vertical">

                    <fzmm.styled-flow-layout direction="vertical" id="options-list">
                        <children>
                            <fzmm.context-menu-button-row>
                                <id>horizontal-direction</id>
                            </fzmm.context-menu-button-row>
                            <fzmm.number-row>
                                <id>posX</id>
                                <tooltipId>pos</tooltipId>
                            </fzmm.number-row>
                            <fzmm.number-row>
                                <id>posY</id>
                                <tooltipId>pos</tooltipId>
                            </fzmm.number-row>
                            <fzmm.number-row>
                                <id>posZ</id>
                                <tooltipId>pos</tooltipId>
                            </fzmm.number-row>
                            <fzmm.text-box-row>
                                <id>name</id>
                                <symbolChatButtons>true</symbolChatButtons>
                            </fzmm.text-box-row>
                            <fzmm.screen-tab-row>
                                <id>tabs</id>
                            </fzmm.screen-tab-row>

                            <fzmm.screen-tab>
                                <id>generate</id>
                                <children>
                                    <fzmm.image-rows>
                                        <buttonId>skin</buttonId>
                                        <imageModeId>skin-source</imageModeId>
                                    </fzmm.image-rows>
                                </children>
                            </fzmm.screen-tab>

                            <fzmm.screen-tab>
                                <id>update</id>
                                <children>
                                </children>
                            </fzmm.screen-tab>
                        </children>
                    </fzmm.styled-flow-layout>

                    <sizing>
                        <vertical method="fill">90</vertical>
                    </sizing>

                    <margins>
                        <vertical>10</vertical>
                    </margins>
                </fzmm.styled-scroll>

                <fzmm.styled-flow-layout direction="horizontal">
                    <children>
                        <button id="execute-button">
                            <text translate="true">gui.done</text>

                            <sizing>
                                <vertical method="fixed">16</vertical>
                            </sizing>
                        </button>

                        <spacer>
                            <sizing>
                                <horizontal method="expand">100</horizontal>
                                <vertical method="fixed">1</vertical>
                            </sizing>
                        </spacer>

                        <button id="back-button">
                            <text translate="true">fzmm.gui.button.back.icon</text>
                            <tooltip-text translate="true">fzmm.gui.button.back</tooltip-text>

                            <sizing>
                                <vertical method="fixed">16</vertical>
                            </sizing>
                        </button>
                    </children>

                    <positioning type="relative">0,100</positioning>

                    <padding>
                        <horizontal>3</horizontal>
                        <bottom>3</bottom>
                    </padding>
                </fzmm.styled-flow-layout>

                <fzmm.styled-flow-layout direction="horizontal">
                    <children>

                        <button id="faq-button">
                            <text translate="true">fzmm.gui.button.faq</text>

                            <margins>
                                <right>3</right>
                                <top>3</top>
                            </margins>

                            <sizing>
                                <vertical method="fixed">16</vertical>
                            </sizing>
                        </button>

                    </children>

                    <positioning type="relative">100,0</positioning>
                </fzmm.styled-flow-layout>
            </children>


            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </fzmm.styled-flow-layout>
    </components>
</owo-ui>