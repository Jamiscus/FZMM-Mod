<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20.3/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <scroll direction="vertical">
                    <flow-layout direction="vertical">
                        <children>
                            <flow-layout direction="horizontal">
                                <children>
                                    <flow-layout direction="horizontal" id="boolean-buttons">
                                        <children>
                                            <button id="allow-duplicates">
                                            </button>
                                            <button id="ignore-max-level">
                                            </button>
                                        </children>

                                        <gap>2</gap>
                                    </flow-layout>

                                    <flow-layout direction="horizontal">
                                        <children>
                                            <button id="sort-levelables">
                                                <margins>
                                                    <left>4</left>
                                                </margins>
                                            </button>
                                        </children>

                                        <tooltip-text translate="true">fzmm.gui.itemEditor.levelable.option.sort</tooltip-text>
                                    </flow-layout>

                                    <button id="remove-all">
                                        <text translate="true">fzmm.gui.itemEditor.levelable.option.removeAll</text>
                                        <positioning type="relative">100,0</positioning>
                                    </button>
                                </children>

                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>

                                <gap>4</gap>
                            </flow-layout>


                            <flow-layout direction="horizontal" id="top-options">
                                <children>
                                    <label>
                                        <text translate="true">fzmm.gui.label.search</text>
                                    </label>

                                    <text-box id="search">
                                        <sizing>
                                            <horizontal method="fixed">80</horizontal>
                                        </sizing>
                                    </text-box>

                                    <label>
                                        <text translate="true">fzmm.gui.itemEditor.levelable.option.setLevels</text>
                                    </label>
                                    <fzmm.text-option id="set-levels">
                                        <sizing>
                                            <horizontal method="fixed">40</horizontal>
                                        </sizing>
                                    </fzmm.text-option>
                                </children>

                                <vertical-alignment>center</vertical-alignment>

                                <gap>4</gap>
                            </flow-layout>


                            <scroll direction="vertical">
                                <flow-layout direction="ltr-text-flow" id="applied-levelables">
                                    <children>
                                    </children>

                                    <sizing>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>
                                </flow-layout>

                                <sizing>
                                    <vertical method="fill">40</vertical>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>

                                <surface>
                                    <panel dark="true"/>
                                </surface>

                                <padding>
                                    <all>10</all>
                                </padding>

                                <scrollbar>
                                    <flat>#FFFFFF</flat>
                                </scrollbar>
                            </scroll>

                            <flow-layout direction="horizontal">
                                <children>

                                    <flow-layout direction="vertical">
                                        <children>
                                            <button id="add-all">
                                                <text translate="true">fzmm.gui.itemEditor.levelable.option.addAll</text>
                                                <sizing>
                                                    <horizontal method="fixed">100</horizontal>
                                                </sizing>
                                            </button>

                                            <scroll direction="vertical">
                                                <flow-layout direction="vertical" id="categories">
                                                    <children>
                                                    </children>
                                                </flow-layout>

                                                <sizing>
                                                    <vertical method="fill">100</vertical>
                                                    <horizontal method="fixed">100</horizontal>
                                                </sizing>

                                                <surface>
                                                    <panel dark="true"/>
                                                </surface>

                                                <padding>
                                                    <all>3</all>
                                                </padding>

                                                <scrollbar>
                                                    <flat>#FFFFFF</flat>
                                                </scrollbar>

                                                <positioning type="relative">0,0</positioning>

                                                <margins>
                                                    <top>24</top>
                                                </margins>
                                            </scroll>
                                        </children>

                                        <gap>4</gap>

                                        <margins>
                                            <right>6</right>
                                        </margins>

                                        <sizing>
                                            <vertical method="fill">100</vertical>
                                            <horizontal method="fixed">100</horizontal>
                                        </sizing>
                                    </flow-layout>

                                    <scroll direction="vertical">
                                        <flow-layout direction="ltr-text-flow" id="add-levelables-layout">
                                            <children>
                                            </children>

                                            <sizing>
                                                <horizontal method="fill">100</horizontal>
                                            </sizing>

                                            <gap>6</gap>
                                        </flow-layout>

                                        <sizing>
                                            <vertical method="expand">100</vertical>
                                            <horizontal method="fill">100</horizontal>
                                        </sizing>

                                        <surface>
                                            <panel dark="true"/>
                                        </surface>

                                        <padding>
                                            <all>10</all>
                                        </padding>

                                        <scrollbar>
                                            <flat>#FFFFFF</flat>
                                        </scrollbar>
                                    </scroll>
                                </children>

                                <sizing>
                                    <vertical method="fill">40</vertical>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>
                            </flow-layout>

                        </children>

                        <gap>6</gap>
                    </flow-layout>

                    <sizing>
                        <vertical method="fill">100</vertical>
                        <horizontal method="fill">100</horizontal>
                    </sizing>

                    <scrollbar>
                        <flat>#FFFFFF</flat>
                    </scrollbar>
                </scroll>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

        </flow-layout>
    </components>
</owo-ui>