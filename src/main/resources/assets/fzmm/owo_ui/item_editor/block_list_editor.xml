<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20.3/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <flow-layout direction="vertical">
                    <children>
                        <flow-layout direction="horizontal">
                            <children>
                                <flow-layout direction="horizontal">
                                    <children>
                                        <button id="sort-blocks">
                                            <margins>
                                                <left>4</left>
                                            </margins>
                                        </button>
                                    </children>

                                    <tooltip-text translate="true">fzmm.gui.itemEditor.common.option.sort</tooltip-text>
                                </flow-layout>
                            </children>

                            <sizing>
                                <horizontal method="fill">100</horizontal>
                            </sizing>

                            <gap>4</gap>
                        </flow-layout>

                        <flow-layout direction="horizontal">
                            <children>
                                <flow-layout direction="vertical">
                                    <children>
                                        <flow-layout direction="vertical">
                                            <children>
                                                <label>
                                                    <text translate="true">fzmm.gui.label.search</text>
                                                    <margins>
                                                        <vertical>2</vertical>
                                                    </margins>

                                                    <sizing>
                                                        <vertical method="fixed">9</vertical>
                                                    </sizing>
                                                </label>

                                                <text-box id="search">
                                                    <sizing>
                                                        <vertical method="fixed">20</vertical>
                                                        <horizontal method="expand">100</horizontal>
                                                    </sizing>

                                                    <margins>
                                                        <bottom>4</bottom>
                                                    </margins>
                                                </text-box>
                                            </children>
                                        </flow-layout>

                                        <scroll direction="vertical">
                                            <flow-layout direction="vertical" id="categories">
                                                <children>
                                                </children>
                                            </flow-layout>

                                            <sizing>
                                                <vertical method="expand">100</vertical>
                                                <horizontal method="expand">100</horizontal>
                                            </sizing>

                                            <surface>
                                                <panel dark="true"/>
                                            </surface>

                                            <padding>
                                                <all>3</all>
                                            </padding>

                                            <scrollbar>
                                                <flat>#FFFFFF</flat>
                                            </scrollbar>
                                        </scroll>
                                    </children>

                                    <margins>
                                        <right>6</right>
                                    </margins>

                                    <sizing>
                                        <vertical method="fill">100</vertical>
                                        <horizontal method="fixed">150</horizontal>
                                    </sizing>
                                </flow-layout>

                                <flow-layout direction="vertical">
                                    <children>

                                        <scroll direction="vertical">
                                            <flow-layout direction="vertical">
                                                <children>
                                                    <flow-layout direction="horizontal">
                                                        <children>
                                                            <label>
                                                                <text translate="true">fzmm.gui.itemEditor.block_list.label.applied</text>
                                                            </label>

                                                            <button id="remove-all">
                                                                <text translate="true">fzmm.gui.itemEditor.common.option.removeAll</text>
                                                                <positioning type="relative">100,0</positioning>
                                                            </button>
                                                        </children>

                                                        <sizing>
                                                            <horizontal method="expand">100</horizontal>
                                                            <vertical method="fixed">20</vertical>
                                                        </sizing>
                                                    </flow-layout>
                                                    <flow-layout direction="ltr-text-flow" id="applied-blocks">
                                                        <children>
                                                        </children>

                                                        <sizing>
                                                            <horizontal method="expand">100</horizontal>
                                                        </sizing>
                                                    </flow-layout>
                                                </children>
                                            </flow-layout>

                                            <sizing>
                                                <vertical method="expand">40</vertical>
                                                <horizontal method="expand">100</horizontal>
                                            </sizing>

                                            <surface>
                                                <panel dark="true"/>
                                            </surface>

                                            <padding>
                                                <all>10</all>
                                            </padding>

                                            <scrollbar>
                                                <flat>#FFFFFF</flat>
                                            </scrollbar>
                                        </scroll>

                                        <flow-layout direction="vertical">
                                            <children>
                                                <scroll direction="vertical">
                                                    <flow-layout direction="vertical">
                                                        <children>
                                                            <flow-layout direction="horizontal">
                                                                <children>
                                                                    <label>
                                                                        <text translate="true">fzmm.gui.itemEditor.block_list.label.available</text>
                                                                    </label>

                                                                    <button id="add-all">
                                                                        <text translate="true">fzmm.gui.itemEditor.common.option.addAll</text>

                                                                        <positioning type="relative">100,0</positioning>
                                                                    </button>
                                                                </children>

                                                                <sizing>
                                                                    <horizontal method="expand">100</horizontal>
                                                                    <vertical method="fixed">20</vertical>
                                                                </sizing>
                                                            </flow-layout>

                                                            <flow-layout direction="ltr-text-flow" id="add-blocks-layout">
                                                                <children>
                                                                </children>

                                                                <sizing>
                                                                    <horizontal method="expand">100</horizontal>
                                                                </sizing>

                                                                <gap>6</gap>
                                                            </flow-layout>
                                                        </children>
                                                    </flow-layout>

                                                    <sizing>
                                                        <vertical method="expand">100</vertical>
                                                        <horizontal method="expand">100</horizontal>
                                                    </sizing>

                                                    <surface>
                                                        <panel dark="true"/>
                                                    </surface>

                                                    <padding>
                                                        <all>10</all>
                                                    </padding>

                                                    <margins>
                                                        <top>4</top>
                                                    </margins>

                                                    <scrollbar>
                                                        <flat>#FFFFFF</flat>
                                                    </scrollbar>
                                                </scroll>
                                            </children>

                                            <sizing>
                                                <vertical method="expand">60</vertical>
                                                <horizontal method="expand">100</horizontal>
                                            </sizing>
                                        </flow-layout>
                                    </children>

                                    <sizing>
                                        <vertical method="expand">100</vertical>
                                        <horizontal method="expand">100</horizontal>
                                    </sizing>
                                </flow-layout>
                            </children>

                            <sizing>
                                <vertical method="expand">100</vertical>
                                <horizontal method="expand">100</horizontal>
                            </sizing>
                        </flow-layout>
                    </children>

                    <sizing>
                        <vertical method="expand">100</vertical>
                        <horizontal method="expand">100</horizontal>
                    </sizing>

                    <margins>
                        <bottom>24</bottom>
                    </margins>

                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

        </flow-layout>
    </components>
</owo-ui>