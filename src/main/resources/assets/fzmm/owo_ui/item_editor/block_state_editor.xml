<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20.3/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <scroll direction="vertical">
                    <flow-layout direction="vertical">
                        <children>
                            <flow-layout direction="horizontal">
                                <children>
                                    <button id="block-button">
                                        <text translate="true">fzmm.gui.itemEditor.block_state.option.block</text>
                                    </button>

                                    <button id="wall-block-button">
                                        <text translate="true">fzmm.gui.itemEditor.block_state.option.wallBlock</text>
                                    </button>
                                </children>

                                <gap>4</gap>

                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>

                                <horizontal-alignment>center</horizontal-alignment>
                            </flow-layout>
                            <flow-layout direction="vertical" id="content">
                                <children>
                                </children>

                                <surface>
                                    <panel dark="true"/>
                                </surface>
                            </flow-layout>
                        </children>

                        <gap>4</gap>
                    </flow-layout>

                    <sizing>
                        <vertical method="fill">100</vertical>
                        <horizontal method="fill">100</horizontal>
                    </sizing>

                    <scrollbar>
                        <flat>#FFFFFF</flat>
                    </scrollbar>
                </scroll>

                <flow-layout direction="horizontal"  id="block-preview-layout">
                    <children>
                    </children>

                    <margins>
                        <top>5</top>
                        <left>5</left>
                    </margins>

                    <vertical-alignment>center</vertical-alignment>
                    <horizontal-alignment>center</horizontal-alignment>

                    <positioning type="relative">0,0</positioning>
                </flow-layout>
            </children>

            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

        </flow-layout>
    </components>

    <templates>
        <block-state-button>
            <flow-layout direction="vertical">
                <children>
                    <flow-layout direction="vertical" id="{{property}}-{{value}}-state-layout">
                        <children>

                        </children>
                    </flow-layout>

                    <label id="{{property}}-{{value}}-label">
                        <sizing>
                            <horizontal method="fill">100</horizontal>
                        </sizing>

                        <horizontal-text-alignment>center</horizontal-text-alignment>
                    </label>
                </children>

                <sizing>
                    <horizontal method="fixed">60</horizontal>
                </sizing>

                <horizontal-alignment>center</horizontal-alignment>

                <gap>2</gap>

                <margins>
                    <vertical>2</vertical>
                    <horizontal>2</horizontal>
                </margins>
            </flow-layout>
        </block-state-button>
    </templates>
</owo-ui>