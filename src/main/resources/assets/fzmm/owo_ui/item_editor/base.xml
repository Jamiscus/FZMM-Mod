<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.20.3/owo-ui.xsd">
    <components>
        <flow-layout direction="horizontal">
            <children>
                <stack-layout>
                    <children>
                        <flow-layout direction="horizontal">
                            <children>
                                <scroll direction="vertical">
                                    <flow-layout direction="vertical" id="base-panel">
                                        <children>

                                            <template name="category-button">
                                                <id>required-items</id>
                                            </template>
                                            <template name="category-button">
                                                <id>applicable-editors</id>
                                            </template>
                                            <template name="category-button">
                                                <id>non-applicable-editors</id>
                                            </template>

                                        </children>

                                        <vertical-alignment>top</vertical-alignment>
                                        <horizontal-alignment>center</horizontal-alignment>

                                        <sizing>
                                            <horizontal method="fill">200</horizontal>
                                        </sizing>

                                        <padding>
                                            <all>6</all>
                                        </padding>

                                        <positioning type="layout">100,0</positioning>

                                    </flow-layout>

                                    <sizing>
                                        <vertical method="fill">100</vertical>
                                    </sizing>

                                    <scrollbar>
                                        <flat>#FFFFFF</flat>
                                    </scrollbar>

                                    <surface>
                                        <panel dark="true"/>
                                    </surface>
                                </scroll>

                                <fzmm.boolean-button id="collapse-button">

                                    <enabled-text translate="true">fzmm.gui.button.collapse.expand</enabled-text>
                                    <disabled-text translate="true">fzmm.gui.button.collapse.collapse</disabled-text>

                                    <sizing>
                                        <horizontal method="fixed">20</horizontal>
                                        <vertical method="fixed">20</vertical>
                                    </sizing>
                                </fzmm.boolean-button>
                            </children>

                            <horizontal-alignment>left</horizontal-alignment>
                            <vertical-alignment>top</vertical-alignment>
                        </flow-layout>

                        <flow-layout direction="vertical" id="content">
                            <children>

                            </children>

                            <sizing>
                                <vertical method="expand">100</vertical>
                                <horizontal method="expand">100</horizontal>
                            </sizing>

                            <margins>
                                <top>20</top>
                                <bottom>8</bottom>
                                <left>208</left>
                                <right>8</right>
                            </margins>
                        </flow-layout>

                    </children>

                    <sizing>
                        <vertical method="fill">100</vertical>
                        <horizontal method="fill">100</horizontal>
                    </sizing>
                </stack-layout>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="back-button">
                            <text translate="true">fzmm.gui.button.back</text>

                            <margins>
                                <right>8</right>
                                <bottom>8</bottom>
                            </margins>
                        </button>

                    </children>

                    <positioning type="relative">100,100</positioning>

                    <vertical-alignment>bottom</vertical-alignment>
                    <horizontal-alignment>right</horizontal-alignment>
                </flow-layout>
            </children>

            <vertical-alignment>top</vertical-alignment>
            <horizontal-alignment>left</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>

    <templates>
        <category-button>
            <flow-layout direction="vertical">
                <children>
                    <flow-layout direction="horizontal" id="{{id}}-label-layout">
                        <children>
                        </children>
                    </flow-layout>

                    <flow-layout direction="vertical" id="{{id}}">
                        <children>
                        </children>

                        <gap>2</gap>

                        <margins>
                            <top>2</top>
                            <bottom>10</bottom>
                        </margins>
                    </flow-layout>
                </children>

                <horizontal-alignment>center</horizontal-alignment>
            </flow-layout>
        </category-button>
    </templates>
</owo-ui>