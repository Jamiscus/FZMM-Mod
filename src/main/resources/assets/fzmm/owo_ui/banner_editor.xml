<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.21/owo-ui.xsd">
    <components>
        <fzmm.styled-flow-layout direction="horizontal">
            <children>
                <fzmm.styled-label id="title">
                    <positioning type="absolute">3,3</positioning>
                    <text translate="true">fzmm.gui.title.bannerEditor</text>
                </fzmm.styled-label>


                <fzmm.styled-scroll direction="vertical">
                    <fzmm.styled-flow-layout direction="vertical">
                        <children>
                            <fzmm.boolean-row>
                                <id>isShield</id>
                            </fzmm.boolean-row>

                            <fzmm.screen-tab-row>
                                <id>tabs</id>
                            </fzmm.screen-tab-row>

                            <fzmm.styled-flow-layout direction="horizontal">
                                <children>
                                    <fzmm.styled-flow-layout direction="vertical">
                                        <children>
                                            <item id="banner-preview">
                                                <sizing>
                                                    <vertical method="fixed">100</vertical>
                                                    <horizontal method="fixed">100</horizontal>
                                                </sizing>
                                            </item>

                                            <button id="give-button">
                                                <text translate="true">fzmm.gui.bannerEditor.button.give</text>

                                                <sizing>
                                                    <horizontal method="fixed">95</horizontal>
                                                </sizing>
                                            </button>

                                            <button id="select-banner-button">
                                                <text translate="true">fzmm.gui.bannerEditor.button.select</text>

                                                <sizing>
                                                    <horizontal method="fixed">95</horizontal>
                                                </sizing>
                                            </button>

                                            <fzmm.styled-flow-layout direction="horizontal">
                                                <children>
                                                    <button id="undo">
                                                        <text translate="true">fzmm.gui.button.arrow2.left</text>
                                                        <tooltip-text translate="true">fzmm.gui.bannerEditor.option.undo.tooltip</tooltip-text>

                                                        <sizing>
                                                            <vertical method="fixed">16</vertical>
                                                        </sizing>
                                                    </button>

                                                    <spacer>
                                                        <sizing>
                                                            <horizontal method="expand">100</horizontal>
                                                            <vertical method="fixed">1</vertical>
                                                        </sizing>
                                                    </spacer>

                                                    <button id="redo">
                                                        <text translate="true">fzmm.gui.button.arrow2.right</text>
                                                        <tooltip-text translate="true">fzmm.gui.bannerEditor.option.redo.tooltip</tooltip-text>

                                                        <sizing>
                                                            <vertical method="fixed">16</vertical>
                                                        </sizing>
                                                    </button>
                                                </children>

                                                <sizing>
                                                    <horizontal method="fixed">95</horizontal>
                                                </sizing>

                                                <margins>
                                                    <all>1</all>
                                                </margins>
                                            </fzmm.styled-flow-layout>
                                        </children>
                                        <gap>4</gap>

                                        <sizing>
                                            <vertical method="fixed">200</vertical>
                                        </sizing>

                                        <vertical-alignment>center</vertical-alignment>
                                        <horizontal-alignment>center</horizontal-alignment>
                                    </fzmm.styled-flow-layout>

                                    <fzmm.styled-flow-layout direction="vertical" id="content">
                                        <children>
                                            <fzmm.styled-flow-layout direction="ltr-text-flow" id="color-layout">
                                                <children>

                                                </children>

                                                <sizing>
                                                    <horizontal method="fill">100</horizontal>
                                                </sizing>

                                                <vertical-alignment>top</vertical-alignment>
                                                <horizontal-alignment>center</horizontal-alignment>

                                            </fzmm.styled-flow-layout>

                                            <fzmm.screen-tab>
                                                <id>addPatterns</id>
                                                <children>
                                                    <fzmm.styled-flow-layout direction="ltr-text-flow" id="add-patterns-layout">
                                                        <children>

                                                        </children>

                                                        <sizing>
                                                            <horizontal method="fill">100</horizontal>
                                                        </sizing>

                                                        <vertical-alignment>top</vertical-alignment>
                                                        <horizontal-alignment>center</horizontal-alignment>

                                                    </fzmm.styled-flow-layout>
                                                </children>
                                            </fzmm.screen-tab>

                                            <fzmm.screen-tab>
                                                <id>changeColor</id>
                                                <children>
                                                    <fzmm.styled-flow-layout direction="ltr-text-flow" id="change-color-layout">
                                                        <children>

                                                        </children>

                                                        <sizing>
                                                            <horizontal method="fill">100</horizontal>
                                                        </sizing>

                                                        <vertical-alignment>top</vertical-alignment>
                                                        <horizontal-alignment>center</horizontal-alignment>

                                                    </fzmm.styled-flow-layout>
                                                </children>
                                            </fzmm.screen-tab>

                                            <fzmm.screen-tab>
                                                <id>removePatterns</id>
                                                <children>
                                                    <fzmm.styled-flow-layout direction="ltr-text-flow" id="remove-patterns-layout">
                                                        <children>

                                                        </children>

                                                        <sizing>
                                                            <horizontal method="fill">100</horizontal>
                                                        </sizing>

                                                        <vertical-alignment>top</vertical-alignment>
                                                        <horizontal-alignment>center</horizontal-alignment>

                                                    </fzmm.styled-flow-layout>
                                                </children>
                                            </fzmm.screen-tab>
                                        </children>

                                        <sizing>
                                            <horizontal method="fill">60</horizontal>
                                        </sizing>

                                        <surface>
                                            <panel dark="true"/>
                                        </surface>

                                        <padding>
                                            <all>6</all>
                                        </padding>
                                    </fzmm.styled-flow-layout>
                                </children>

                                <sizing>
                                    <horizontal method="fill">100</horizontal>
                                </sizing>

                                <horizontal-alignment>center</horizontal-alignment>

                            </fzmm.styled-flow-layout>
                        </children>
                    </fzmm.styled-flow-layout>

                    <sizing>
                        <vertical method="fill">90</vertical>
                    </sizing>

                    <margins>
                        <top>10</top>
                        <bottom>10</bottom>
                    </margins>
                </fzmm.styled-scroll>

                <fzmm.styled-flow-layout direction="horizontal">
                    <children>

                        <button id="back-button">
                            <text translate="true">fzmm.gui.button.back.icon</text>
                            <tooltip-text translate="true">fzmm.gui.button.back</tooltip-text>

                            <margins>
                                <right>3</right>
                                <bottom>3</bottom>
                            </margins>

                            <sizing>
                                <vertical method="fixed">16</vertical>
                            </sizing>
                        </button>

                    </children>

                    <positioning type="relative">100,100</positioning>

                    <vertical-alignment>bottom</vertical-alignment>
                    <horizontal-alignment>right</horizontal-alignment>
                </fzmm.styled-flow-layout>
            </children>


            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </fzmm.styled-flow-layout>
    </components>
</owo-ui>