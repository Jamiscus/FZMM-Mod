<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19.3/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <label id="title">
                    <positioning type="absolute">20,20</positioning>
                    <text translate="true">fzmm.gui.title.headGenerator</text>
                </label>

                <flow-layout direction="vertical" id="head-option-list">
                    <children>

                        <image-rows>
                            <buttonId>skin</buttonId>
                            <enumId>skinSourceType</enumId>
                        </image-rows>
                        <text-box-row>
                            <id>headName</id>
                            <symbolButton>true</symbolButton>
                            <fontButton>true</fontButton>
                        </text-box-row>
                    </children>

                    <margins>
                        <top>48</top>
                    </margins>
                </flow-layout>

                <flow-layout direction="horizontal" id="content-layout">
                    <children>
                        <!-- compound heads -->
                        <scroll direction="vertical">
                            <flow-layout direction="vertical" id="compound-heads-layout">
                                <children>
                                </children>

                                <sizing>
                                    <horizontal method="fixed">0</horizontal>
                                </sizing>

                                <padding>
                                    <all>3</all>
                                </padding>

                                <horizontal-alignment>center</horizontal-alignment>
                            </flow-layout>

                            <sizing>
                                <vertical method="fill">100</vertical>
                            </sizing>

                            <scrollbar>
                                <flat>#FFFFFF</flat>
                            </scrollbar>

                            <padding>
                                <all>1</all>
                            </padding>
                        </scroll>

                        <!-- heads content + nav var -->
                        <flow-layout direction="vertical" id="heads-layout">
                            <children>
                                <flow-layout direction="horizontal" id="no-results-label-layout">
                                    <children>
                                    </children>
                                    <margins>
                                        <top>25</top>
                                    </margins>

                                    <positioning type="relative">0,0</positioning>
                                </flow-layout>
                                <scroll direction="vertical">
                                    <vertical-grid-layout maxColumns="20" componentsWidth="40" componentsHeight="30"
                                                          id="head-grid">
                                        <children>

                                        </children>

                                        <horizontal-alignment>center</horizontal-alignment>
                                    </vertical-grid-layout>

                                    <sizing>
                                        <vertical method="fill">100</vertical>
                                        <horizontal method="fill">100</horizontal>
                                    </sizing>

                                    <scrollbar>
                                        <flat>#FFFFFF</flat>
                                    </scrollbar>

                                    <padding>
                                        <horizontal>1</horizontal>
                                        <bottom>1</bottom>
                                        <top>25</top>
                                    </padding>
                                </scroll>

                                <flow-layout direction="horizontal">
                                    <children>

                                        <flow-layout direction="horizontal" id="head-list-nav">
                                            <children>
                                                <text-box id="search-text-box">
                                                    <sizing>
                                                        <horizontal method="fixed">80</horizontal>
                                                        <vertical method="fixed">18</vertical>
                                                    </sizing>
                                                </text-box>

                                                <collapsible id="head-category-collapsible">
                                                    <children>
                                                    </children>

                                                    <text translate="true">fzmm.gui.headGenerator.label.category</text>
                                                </collapsible>
                                                <button id="toggle-favorite-list">
                                                </button>

                                                <boolean-button id="overlapHatLayer-boolean-button">
                                                    <enabled-text translate="true">fzmm.gui.headGenerator.button.overlapHatLayer.enabled</enabled-text>
                                                    <disabled-text translate="true">fzmm.gui.headGenerator.button.overlapHatLayer.disabled</disabled-text>

                                                    <sizing>
                                                        <horizontal method="content">0</horizontal>
                                                    </sizing>
                                                </boolean-button>
                                            </children>

                                            <horizontal-alignment>left</horizontal-alignment>

                                            <margins>
                                                <all>3</all>
                                            </margins>

                                            <sizing>
                                                <horizontal method="fill">100</horizontal>
                                            </sizing>

                                            <gap>4</gap>

                                            <allow-overflow>true</allow-overflow>

                                        </flow-layout>

                                    </children>

                                    <allow-overflow>true</allow-overflow>

                                    <positioning type="relative">0,0</positioning>
                                </flow-layout>
                            </children>

                            <sizing>
                                <vertical method="fill">100</vertical>
                                <horizontal method="fill">99</horizontal>
                            </sizing>

                            <horizontal-alignment>center</horizontal-alignment>

                            <allow-overflow>true</allow-overflow>

                            <surface>
                                <panel dark="true"/>
                            </surface>

                            <padding>
                                <all>3</all>
                            </padding>

                        </flow-layout>
                    </children>

                    <horizontal-alignment>center</horizontal-alignment>

                    <!-- FIXME help I didn't find a nice way to do this -->
                    <margins>
                        <horizontal>20</horizontal>
                        <bottom>44</bottom>
                        <top>128</top>
                    </margins>

                    <sizing>
                        <horizontal method="fill">100</horizontal>
                        <vertical method="fill">100</vertical>
                    </sizing>

                    <positioning type="absolute">0,0</positioning>

                    <gap>6</gap>
                </flow-layout>


                <flow-layout direction="horizontal">
                    <children>

                        <button id="wiki-button">
                            <text translate="true">fzmm.gui.headGenerator.button.resourcePackInfo</text>

                            <margins>
                                <right>20</right>
                                <top>20</top>
                            </margins>
                        </button>

                    </children>

                    <positioning type="relative">100,0</positioning>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="open-folder-button">
                            <text translate="true">fzmm.gui.headGenerator.button.openFolder</text>
                        </button>

                    </children>

                    <positioning type="relative">0,100</positioning>

                    <horizontal-alignment>right</horizontal-alignment>
                    <vertical-alignment>top</vertical-alignment>
                    <gap>4</gap>

                    <margins>
                        <left>20</left>
                        <bottom>20</bottom>
                    </margins>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="back-button">
                            <text translate="true">fzmm.gui.button.back</text>

                            <margins>
                                <right>20</right>
                                <bottom>20</bottom>
                            </margins>
                        </button>

                    </children>

                    <positioning type="relative">100,100</positioning>

                    <vertical-alignment>bottom</vertical-alignment>
                    <horizontal-alignment>right</horizontal-alignment>
                </flow-layout>

            </children>

            <vertical-alignment>top</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <sizing>
                <vertical method="content">100</vertical>
            </sizing>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
    <templates>
        <head-overlay>
            <flow-layout direction="vertical" id="panel">
                <children>
                    <flow-layout direction="horizontal">
                        <children>
                            <flow-layout direction="horizontal" id="preview">
                                <children>
                                </children>
                            </flow-layout>

                            <flow-layout direction="vertical">
                                <children>
                                    <label>
                                        <text>{{name}}</text>
                                    </label>

                                    <label id="category-label">
                                    </label>
                                </children>

                                <gap>8</gap>

                            </flow-layout>
                        </children>

                        <gap>8</gap>
                    </flow-layout>


                    <flow-layout direction="horizontal" id="top-right-buttons">
                        <children>
                        </children>

                        <gap>8</gap>

                        <positioning type="relative">100,0</positioning>

                        <vertical-alignment>center</vertical-alignment>

                    </flow-layout>

                    <button id="save-button">
                        <text translate="true">fzmm.gui.headGenerator.button.saveSkin</text>
                        <positioning type="relative">0,100</positioning>
                    </button>

                    <button id="give-button">
                        <text translate="true">fzmm.gui.button.giveHead</text>
                        <positioning type="relative">100,100</positioning>
                    </button>

                    <scroll>
                        <flow-layout direction="vertical" id="parameters">
                            <children>
                            </children>
                        </flow-layout>

                        <sizing>
                            <vertical method="fill">80</vertical>
                            <horizontal method="fill">100</horizontal>
                        </sizing>

                        <scrollbar>
                            <flat>#FFFFFF</flat>
                        </scrollbar>
                    </scroll>

                </children>

                <sizing>
                    <horizontal method="fill">70</horizontal>
                    <vertical method="fill">70</vertical>
                </sizing>

                <surface>
                    <panel dark="true"/>
                </surface>

                <padding>
                    <all>12</all>
                </padding>

                <z-index>300</z-index>

                <gap>8</gap>

            </flow-layout>
        </head-overlay>
    </templates>
</owo-ui>