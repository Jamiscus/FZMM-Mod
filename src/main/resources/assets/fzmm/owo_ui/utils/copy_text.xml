<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.21/owo-ui.xsd">
    <components>
        <fzmm.styled-flow-layout direction="vertical">
            <children>
                <fzmm.styled-label id="title">
                    <positioning type="absolute">3,3</positioning>
                    <text translate="true">fzmm.gui.title.copyText</text>
                </fzmm.styled-label>

                <fzmm.styled-scroll direction="vertical">

                    <fzmm.styled-flow-layout direction="vertical" id="copy-buttons-list">
                        <children>
                            <fzmm.button-row>
                                <id>json</id>
                            </fzmm.button-row>
                            <fzmm.button-row>
                                <id>chatDefault</id>
                            </fzmm.button-row>
                            <fzmm.button-row>
                                <id>chatLegacy</id>
                            </fzmm.button-row>
                            <fzmm.button-row>
                                <id>console</id>
                            </fzmm.button-row>
                            <fzmm.button-row>
                                <id>motd</id>
                            </fzmm.button-row>
                            <fzmm.button-row>
                                <id>xml</id>
                            </fzmm.button-row>
                            <fzmm.button-row>
                                <id>bbcode</id>
                            </fzmm.button-row>
                            <fzmm.button-row>
                                <id>string</id>
                            </fzmm.button-row>
                        </children>
                    </fzmm.styled-flow-layout>

                    <sizing>
                        <vertical method="fill">90</vertical>
                    </sizing>

                    <margins>
                        <vertical>10</vertical>
                    </margins>
                </fzmm.styled-scroll>

                <fzmm.styled-flow-layout direction="horizontal">
                    <children>

                        <button id="back-button">
                            <text translate="true">fzmm.gui.button.back.icon</text>
                            <tooltip-text translate="true">fzmm.gui.button.back</tooltip-text>

                            <margins>
                                <right>3</right>
                                <bottom>3</bottom>
                            </margins>

                            <sizing>
                                <vertical method="fixed">16</vertical>
                            </sizing>
                        </button>

                    </children>

                    <positioning type="relative">100,100</positioning>

                    <vertical-alignment>bottom</vertical-alignment>
                    <horizontal-alignment>right</horizontal-alignment>
                </fzmm.styled-flow-layout>
            </children>


            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </fzmm.styled-flow-layout>
    </components>
</owo-ui>