<owo-ui xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/wisp-forest/owo-lib/1.19/owo-ui.xsd">
    <components>
        <flow-layout direction="vertical">
            <children>
                <label id="title">
                    <positioning type="absolute">20,20</positioning>
                    <text translate="true">fzmm.gui.title.textFormat</text>
                </label>

                <scroll direction="horizontal">
                    <flow-layout direction="horizontal">
                        <children>
                            <label id="message-preview">

                                <margins>
                                    <bottom>4</bottom>
                                </margins>
                            </label>
                        </children>
                    </flow-layout>

                    <sizing>
                        <horizontal method="fill">100</horizontal>
                    </sizing>

                    <positioning type="absolute">0,35</positioning>

                    <padding>
                        <bottom>8</bottom>
                        <horizontal>20</horizontal>
                    </padding>

                    <scrollbar>
                        <flat>#FFFFFF</flat>
                    </scrollbar>
                </scroll>

                <scroll direction="vertical">

                    <flow-layout direction="vertical" id="options-list">
                        <children>
                            <text-box-row>
                                <id>message</id>
                                <symbolButton>true</symbolButton>
                                <fontButton>true</fontButton>
                            </text-box-row>
                            <boolean-row>
                                <id>bold</id>
                            </boolean-row>
                            <boolean-row>
                                <id>italic</id>
                            </boolean-row>
                            <boolean-row>
                                <id>obfuscated</id>
                            </boolean-row>
                            <boolean-row>
                                <id>strikethrough</id>
                            </boolean-row>
                            <boolean-row>
                                <id>underline</id>
                            </boolean-row>
                            <screen-tab-row>
                                <id>tabs</id>
                            </screen-tab-row>

                            <screen-tab>
                                <id>rainbow</id>
                                <children>
                                    <slider-row>
                                        <id>hue</id>
                                    </slider-row>
                                    <slider-row>
                                        <id>brightness</id>
                                    </slider-row>
                                    <slider-row>
                                        <id>saturation</id>
                                    </slider-row>
                                    <slider-row>
                                        <id>hueStep</id>
                                    </slider-row>
                                </children>
                            </screen-tab>

                            <screen-tab>
                                <id>gradient</id>
                                <children>
                                    <color-list>
                                        <id>gradientColorList</id>
                                    </color-list>
                                </children>
                            </screen-tab>

                            <screen-tab>
                                <id>simple</id>
                                <children>
                                    <color-row>
                                        <id>color</id>
                                    </color-row>
                                </children>
                            </screen-tab>

                            <screen-tab>
                                <id>interleaved_colors</id>
                                <children>
                                    <slider-row>
                                        <id>interleavedDistance</id>
                                    </slider-row>
                                    <color-list>
                                        <id>interleavedColorList</id>
                                    </color-list>
                                </children>
                            </screen-tab>
                        </children>

                        <horizontal-alignment>center</horizontal-alignment>
                        <vertical-alignment>center</vertical-alignment>
                    </flow-layout>

                    <sizing>
                        <vertical method="fill">90</vertical>
                    </sizing>

                    <margins>
                        <top>40</top>
                        <bottom>30</bottom>
                    </margins>

                    <scrollbar>
                        <flat>#FFFFFF</flat>
                    </scrollbar>
                </scroll>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="add-lore-button">
                            <text translate="true">fzmm.gui.textFormat.button.addLore</text>

                            <margins>
                                <left>20</left>
                                <bottom>20</bottom>
                            </margins>
                        </button>

                        <button id="set-name-button">
                            <text translate="true">fzmm.gui.textFormat.button.setName</text>

                            <margins>
                                <left>4</left>
                                <bottom>20</bottom>
                            </margins>
                        </button>

                        <button id="copy-button">
                            <text translate="true">fzmm.gui.button.copy</text>

                            <margins>
                                <left>4</left>
                                <bottom>20</bottom>
                            </margins>
                        </button>

                        <button id="random-button">
                            <text translate="true">fzmm.gui.textFormat.button.randomColors</text>

                            <margins>
                                <left>4</left>
                                <bottom>20</bottom>
                            </margins>
                        </button>
                    </children>

                    <positioning type="relative">0,100</positioning>

                    <vertical-alignment>bottom</vertical-alignment>
                    <horizontal-alignment>right</horizontal-alignment>
                </flow-layout>

                <flow-layout direction="horizontal">
                    <children>

                        <button id="back-button">
                            <text translate="true">fzmm.gui.button.back</text>

                            <margins>
                                <right>20</right>
                                <bottom>20</bottom>
                            </margins>
                        </button>

                    </children>

                    <positioning type="relative">100,100</positioning>

                    <vertical-alignment>bottom</vertical-alignment>
                    <horizontal-alignment>right</horizontal-alignment>
                </flow-layout>
            </children>


            <vertical-alignment>center</vertical-alignment>
            <horizontal-alignment>center</horizontal-alignment>

            <surface>
                <vanilla-translucent/>
            </surface>
        </flow-layout>
    </components>
    <templates>
        <color-picker-panel>
            <flow-layout direction="vertical">
                <children>
                    <label>
                        <text translate="true">fzmm.gui.colorPicker.title</text>
                        <shadow>true</shadow>
                        <margins>
                            <top>3</top>
                        </margins>
                    </label>

                    <color-picker id="color-picker">
                        <show-alpha>{{with-alpha}}</show-alpha>
                        <selected-color>{{color}}</selected-color>
                        <sizing>
                            <horizontal method="fixed">160</horizontal>
                            <vertical method="fixed">100</vertical>
                        </sizing>
                    </color-picker>

                    <flow-layout direction="horizontal">
                        <children>
                            <box>
                                <fill>true</fill>
                                <color>{{color}}</color>
                                <sizing>
                                    <horizontal method="fixed">80</horizontal>
                                    <vertical method="fixed">15</vertical>
                                </sizing>
                            </box>
                            <box id="current-color">
                                <fill>true</fill>
                                <color>{{color}}</color>
                                <sizing>
                                    <horizontal method="fixed">80</horizontal>
                                    <vertical method="fixed">15</vertical>
                                </sizing>
                            </box>
                        </children>
                    </flow-layout>

                    <flow-layout direction="horizontal">
                        <children>
                            <button id="cancel-button">
                                <text>❌</text>
                                <sizing>
                                    <horizontal method="fixed">50</horizontal>
                                    <vertical method="fixed">14</vertical>
                                </sizing>
                            </button>

                            <button id="confirm-button">
                                <text>✔</text>
                                <sizing>
                                    <horizontal method="fixed">50</horizontal>
                                    <vertical method="fixed">14</vertical>
                                </sizing>
                            </button>
                        </children>

                        <gap>10</gap>
                    </flow-layout>
                </children>

                <horizontal-alignment>center</horizontal-alignment>

                <gap>5</gap>
                <padding>
                    <all>5</all>
                </padding>
                <surface>
                    <panel dark="true"/>
                </surface>
            </flow-layout>
        </color-picker-panel>
    </templates>
</owo-ui>